<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeagueActivity">

    <ImageView
        android:id="@+id/ivLeagueBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/desiredleaguebg"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="125dp" />

    <ImageView
        android:id="@+id/ivLeagueLogo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swooshlogo"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/tvLeagueInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired League:"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLeagueLogo"
        tools:layout_editor_absoluteY="123dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLeagueInstruction"
        tools:layout_editor_absoluteY="273dp">

        <ToggleButton
            android:id="@+id/tbLeagueMens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/swoosh_toogle"
            android:textColor="#FFFFFF"
            android:textOff="Mens"
            android:textOn="Mens" />

        <ToggleButton
            android:id="@+id/tbLeagueWomens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/swoosh_toogle"
            android:textColor="#FFFFFF"
            android:textOff="Womens"
            android:textOn="Womens" />

        <ToggleButton
            android:id="@+id/tbLeagueCoed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/swoosh_toogle"
            android:textColor="#FFFFFF"
            android:textOff="Co-ed"
            android:textOn="Co-ed" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLeagueNext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:background="@drawable/swoosh_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>